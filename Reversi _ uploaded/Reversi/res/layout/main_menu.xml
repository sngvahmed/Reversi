<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_startgame_menu"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_highscore_menu"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/btn_startgame_menu"
        android:layout_below="@+id/btn_startgame_menu"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_topten_menu"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btn_highscore_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_help_menu"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_topten_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_exit_menu"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_help_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_welcome_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="User"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

</RelativeLayout>